{{#paper-sidenav class="md-whiteframe-z2" lockedOpen=true}}
  {{#paper-toolbar as |toolbar|}}
    {{#paper-toolbar-tools class="layout-row layout-align-space-between-center"}}
      {{link-to (t 'projects.labels.projects') 'index'}}
      {{projects-list/add-button}}
    {{/paper-toolbar-tools}}
  {{/paper-toolbar}}

  {{#paper-content}}
    {{#each projects as |project|}}
      {{projects-list/project project=project}}
    {{/each}}
  {{/paper-content}}
{{/paper-sidenav}}
